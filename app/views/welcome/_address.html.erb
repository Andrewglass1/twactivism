<div class="item-inner">
  <h1>select some politicians</h1>

  <div id="chosen-holder">
    <select data-placeholder="Choose a Politician" id="politician-select" multiple style="width:350px;" tabindex="4">
        <option value=""></option>
        <%= Politician.all.each do |poli| %>
          <option class="politician-select" value="<%= poli.id %>"
                  data-id="<%= poli.id %>" data-name="<%= poli.name%>" data-image="<%= poli.avatar %>">
            <%= poli.name %>
          </option>
        <% end %>
    </select>
  </div>

  <div id="options-holder">
    <ul id="options">
      <li>
        a.  select from the above list
      </li>

      <li>
        b. select from a precompiled shit list
        <%= render :partial => "shit_lists/shit_lists" %>
      </li>

      <li>
        <a href="#shitlist-modal" role="button" class="btn btn-success" data-toggle="modal">create a new shit list</a>
        <%= render :partial => 'shit_lists/shit_list_modal' %>
      </li>

    </ul>
  </div>


  <%= link_to "compose your tweet","#", :id => "compose-button", :class => "btn btn-large btn-block btn-primary" %>
</div>